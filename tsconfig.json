{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["esnext"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "rootDir": "source",
    "outDir": "build",
    "typeRoots": [
      "node_modules/@types",
    ],
  },
  "exclude": [
    "node_modules",
  ],
}